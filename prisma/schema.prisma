generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

enum FileType {
  YOUTUBE
  VIDEO
  AUDIO
  SCREEN_RECORD
  LOCAL_VIDEO
}

model User {
  id        Int      @id @default(autoincrement())
  fName     String
  lName     String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt

  files    File[]     @relation("userModel")
  response Response[] @relation("userModel")
}

model File {
  id          Int      @id @default(autoincrement())
  title       String
  videoId     String?  @unique
  audioId     String?  @unique
  videoUrl    String?
  audioUrl    String?
  youtubeId   String?  @unique
  description String?
  tags        String[] @default([])

  // ðŸ”¥ Foreign key
  userId Int
  user   User @relation("userModel", fields: [userId], references: [id], onDelete: Cascade)

  durationString String
  thumbnail      String?
  categories     String[] @default([])
  type           FileType

  response Response[] @relation("fileModel")

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Response {
  id Int @id @default(autoincrement())

  userId Int
  user   User @relation("userModel", fields: [userId], references: [id], onDelete: Cascade)

  fileId Int
  file   File @relation("fileModel", fields: [fileId], references: [id], onDelete: Cascade)

  slides    Slides[] @relation("responseSlides")
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Slides {
  id Int @id @default(autoincrement())

  responseId Int
  response   Response @relation("responseSlides", fields: [responseId], references: [id], onDelete: Cascade)

  slideIndex    Int
  title         String
  htmlContent   String
  detailedNotes String
  speakerNotes  String
  createdAt     DateTime @default(now())
  updateAt      DateTime @updatedAt
}
