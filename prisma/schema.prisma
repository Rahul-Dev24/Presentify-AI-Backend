generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum FileType {
  YOUTUBE
  VIDEO
  AUDIO
  SCREEN_RECORD
}

model User {
  id        Int      @id @default(autoincrement())
  fName     String
  lName     String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updateAt  DateTime @default(now())
  file      File[]   @relation("userModel")
}

model File {
  id       Int      @id @default(autoincrement())
  videoId  String?
  audioId  String?
  videoUrl String?
  audioUrl String?
  user     User     @relation("userModel", fields: [id], references: [id])
  type     FileType

  createdAt DateTime @default(now())
  updateAt  DateTime @default(now())
}
